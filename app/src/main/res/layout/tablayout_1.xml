<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tab1"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"

        android:background="@drawable/round_border_edittext_blue"
        android:fontFamily="@font/sfmedium"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_33sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:text="@string/my_journals"
        android:textColor="@color/appBlue"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tab2"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:background="@drawable/round_border_edittext_gradient"
        android:fontFamily="@font/sfmedium"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_33sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:text="@string/my_journals"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="187dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="-4dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab1" />

    <View
        android:id="@+id/view10"
        android:layout_width="171dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="-4dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/tab2" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-4dp"
        android:background="@color/appBlue"
        android:elevation="-1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />


</androidx.constraintlayout.widget.ConstraintLayout>